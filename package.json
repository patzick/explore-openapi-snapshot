{
  "name": "explore-openapi-snapshot",
  "version": "1.0.0",
  "description": "GitHub Action to create a snapshot of OpenAPI schema at https://explore-openapi.dev/",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsdown src/index.ts --format esm --platform node",
    "lint": "oxlint src",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "github-action",
    "openapi",
    "snapshot"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "oxlint": "^0.9.10",
    "tsdown": "^0.2.16",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=20"
  }
}
