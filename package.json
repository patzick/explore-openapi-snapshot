{
  "name": "explore-openapi-snapshot",
  "version": "2.0.0",
  "description": "GitHub Action to create a snapshot of OpenAPI schema at https://explore-openapi.dev/",
  "keywords": [
    "github-action",
    "openapi",
    "snapshot"
  ],
  "license": "MIT",
  "author": "Patryk Tomczyk - patzick",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build ./src/index.ts",
    "lint": "oxlint --type-aware src",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "typecheck": "tsgo --noEmit",
    "quality-check": "pnpm build && pnpm typecheck && pnpm lint && pnpm test"
  },
  "dependencies": {
    "@actions/core": "2.0.2",
    "@actions/github": "6.0.1"
  },
  "devDependencies": {
    "@types/node": "24.10.1",
    "@typescript/native-preview": "7.0.0-dev.20260119.1",
    "@vercel/ncc": "0.38.4",
    "oxfmt": "0.23.0",
    "oxlint": "1.34.0",
    "oxlint-tsgolint": "0.11.0",
    "typescript": "5.9.3",
    "vitest": "4.0.16",
    "zod": "4.3.5"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@10.28.0"
}
