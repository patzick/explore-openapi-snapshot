{
  "name": "explore-openapi-snapshot",
  "version": "2.0.0",
  "description": "GitHub Action to create a snapshot of OpenAPI schema at https://explore-openapi.dev/",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "ncc build ./src/index.ts",
    "lint": "oxlint src && biome lint src",
    "format": "biome format --write",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "typecheck": "tsc --noEmit",
    "quality-check": "pnpm build && pnpm typecheck && pnpm lint && pnpm test"
  },
  "keywords": [
    "github-action",
    "openapi",
    "snapshot"
  ],
  "author": "Patryk Tomczyk - patzick",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.11.1",
    "@actions/github": "6.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/node": "24.10.1",
    "@vercel/ncc": "0.38.4",
    "oxlint": "1.31.0",
    "typescript": "5.9.3",
    "vitest": "4.0.15",
    "zod": "4.2.0"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@10.18.3"
}